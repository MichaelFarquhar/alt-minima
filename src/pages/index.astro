---
import ScrollSection from '../layouts/ScrollSection.astro';
import HomeSection from '../sections/HomeSection.astro';
import StoreSection from '../sections/StoreSection.astro';
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/full-page-scroll.css" />
        <title>Alt Minima | Minimal Elegant Design</title>
    </head>
    <body>
        <div id="main" class="scroll-container">
            <ScrollSection>
                <HomeSection />
            </ScrollSection>
            <ScrollSection>
                <StoreSection />
            </ScrollSection>
        </div>

        <script is:inline src="/full-page-scroll.js"></script>
        <script>
            declare var fullScroll: any;
            new fullScroll({
                mainElement: 'main',
                animateTime: 0.7,
                animateFunction: 'ease',
                currentPosition: 0,
                displayDots: false,
            });
        </script>
    </body>
</html>

<style>
    /* Import Titillium Web font */
    @font-face {
        font-family: 'Titillium Web';
        src: url('/fonts/TitilliumWeb-Regular.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }
    @font-face {
        font-family: 'Titillium Web';
        src: url('/fonts/TitilliumWeb-Bold.ttf') format('truetype');
        font-weight: bold;
        font-style: normal;
    }
</style>
