---
import { Icon } from 'astro-icon/components';

interface Props {
    title: string;
    icon: string;
}

const { title, icon } = Astro.props;
---

<div class="w-full bg-slate-100 rounded-lg p-6 flex flex-col items-center space-y-6">
    <div class="flex justify-center space-x-4">
        <Icon name={`simple-icons:${icon}`} class="w-8 h-8 text-th-bg" />
        <h2 class="text-2xl text-th-bg">{title}</h2>
    </div>
    <div class="text-sm uppercase font-bold">COMING SOON</div>
</div>
