---
import { Icon } from 'astro-icon/components';

interface Props {
    title: string;
    icon: string;
    color: string;
}

const { title, icon, color } = Astro.props;
---

<div class="w-full h-full bg-slate-100 rounded-lg flex items-center drop-shadow-md">
    <div
        class={`h-full w-fit flex items-center rounded-l-lg px-6`}
        style={`background: ${color}`}
    >
        <Icon name={`simple-icons:${icon}`} class="w-8 md:w-10 h-8 md:h-10 text-white" />
    </div>
    <div class="flex flex-col justify-center py-3 px-6">
        <h2 class="text-2xl text-th-bg mb-2 font-semibold">{title}</h2>
        <div class="text-sm uppercase font-semibold text-slate-600">COMING SOON</div>
    </div>
</div>
